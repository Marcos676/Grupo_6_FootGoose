<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

      <main class="container contenido nuevo-producto">
        <!-- Titulo -->
        <h1 class="col-12">NUEVO PRODUCTO</h1>

        <form class="col-12 row" action="/admin/products/create" method="POST">
          <!-- Carrusel -->
          <div class="carrusel-add-image col-12 col-lg-6">
            <div id="carousel-controller" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="/images/productos/casaperro1.jpg" class="imagen-carrusel" alt="...">
                  <button class="btn btn-danger" type="button">X</button>
                </div>
                <div class="carousel-item">
                  <img src="/images/productos/casaperro2.jpg" class="imagen-carrusel" alt="...">
                  <button class="btn btn-danger" type="button">X</button>
                </div>
                <div class="carousel-item">
                  <img src="/images/productos/casaperro3.jpg" class="imagen-carrusel" alt="...">
                  <button class="btn btn-danger" type="button">X</button>
                </div>
              </div>
              <a class="carousel-control-prev" href="#carousel-controller" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel-controller" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <!-- Boton agregar imagen -->
            <div class="boton-image col-12">
              <label class="btn btn-success" for="archivo">Agregar foto</label>
              <span class="obligatorio">*</span>
              <input type="file" name="img" id="archivo" multiple >

            </div>
          </div>

          <!-- CAMPOS -->
          
          <div class="col-12 col-lg-6">
            <!-- Animales y Categorías -->
            <div class="campo-animal margen">
              <select class="seleccionar col-5" name="animal">
                <option value="perro">Perro</option>
                <option value="gato">Gato</option>
                <option value="ave">Ave</option>
                <option value="pez">Pez</option>
                <option value="roedor">Roedor</option>
                <option value="reptil">Reptil</option>
              </select>
              <span class="obligatorio col-1">*</span>

              <select class="seleccionar col-5" name="category">
                <option value="alimento">Alimento</option>
                <option value="salud">Salud</option>
                <option value="juguete">Juguete</option>
                <option value="accesorio">Accesorio</option>
                <option value="estetica-higiene">Estetica e higiene</option>
                <option value="farmacia">Farmacia</option>
              </select>
              <span class="obligatorio col-1">*</span>

            </div>

            <!-- Subcategoria -->
            <div class="sub-categoria margen">
              <input class="completar col-11" type="text" name="subCategory"
                placeholder="Sub-categoria ej: pretal, alimento seco, etc.">
              <span class="obligatorio col-1">*</span>
            </div>

            <!-- Nombre -->
            <div class="nombre margen">
              <input class="completar col-11" type="text" name="name" placeholder="Nombre">
              <span class="obligatorio col-1">*</span>
            </div>

            <!-- Descripcion -->
            <div class="descripcion margen">
              <textarea class="completar col-11" name="description" cols="30" rows="3"
                placeholder="Descripción"></textarea>
            </div>

            <!-- Cantidad y precio -->
            <div class="cantidad-precio margen">
              <!-- cantidad -->
                <input class="completar col-5" type="number" name="cuantity" min="1" step="1" placeholder="Cantidad" />
                <span class="obligatorio col-1">*</span>
              <!-- Precio -->
                <input class="input-precio completar col-5" type="number" name="price" min="1" step="1" placeholder="$ Precio" />
                <span class="obligatorio col-1">*</span>
            </div>

            <!-- etiqueta y descuento -->
            <div class="etiqueta-descuento margen">
                <select class="seleccionar col-5" name="label" id="etiqueta">
                  <option value="null">Sin etiqueta</option>
                  <option value="new">Nuevo</option>
                  <option value="discount">Descuento</option>
                </select>  
                <!-- Espacio -->
                <div class="col-1"></div>

              <!-- descuento -->
                <input class="completar col-5" type="number" name="discount" min="0" max="100" step="1" placeholder="% descuento" />
            </div>

            <!-- vencimiento(etiqueta-descuento) y precio final -->
            <div class="vencimiento-precio-final margen">
              <!-- vencimiento -->
              
                <input class="vencimiento seleccionar col-5" type="date" name="expiration" placeholder="Vencimiento">
                <!-- Espacio -->
                <div class="col-1"></div>
              
              <!-- Precio final -->
              
                <input class="completar col-5" type="text" name="finalPrice" placeholder="$ Precio final">
              
            </div>
            <span class="margen">* Campos obligatorios</span>
          </div>
          <!-- Botones -->
          <div class="botones col-12 row">
            <button class="btn btn-danger resetear col-5" type="reset">Resetear</button>
            <button class="btn btn-success crear col-5" type="submit">Crear</button>
          </div>
        </form>
      </main>


      <%- include('./partials/footer') %>
  </body>

</html>