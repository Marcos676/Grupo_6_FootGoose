<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

            <div class="container contenido admin-product-detail padding-r-no row">
                <!-- Titulo -->
                <h3 class="col">
                    <%= product.name %>
                </h3>
                <!-- Carrusel -->
                <div class="carrusel-add-image col-12 col-lg-6">
                    <div id="carousel-controller" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/productos/casaperro1.jpg" class="imagen-carrusel" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/productos/casaperro2.jpg" class="imagen-carrusel" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/productos/casaperro3.jpg" class="imagen-carrusel" alt="...">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-controller" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-controller" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!-- Datos -->
                <div class="padding-r-no col-12 col-lg-4">
                    <article>
                        <p class="borde-inferior">
                            Descripción: <%= product.description %>
                        </p>
                        <ul class="borde-inferior">
                            <li>
                                <p>Precio original: $<%= product.price %>
                                </p>
                            </li>
                            <li>
                                <p>Descuento: <%= product.discount %> %</p>
                            </li>
                            <li>
                                <p>Precio final: $<%= product.finalPrice %>
                                </p>
                            </li>
                            <li>
                                <p>Etiqueta: <%= product.label %>
                                </p>
                            </li>
                            <li>
                                <p>Vencimiento de etiqueta: <%= product.expiration %>
                                </p>
                            </li>
                        </ul>
                        <ul class="borde-inferior">
                            <li>
                                <p>Cantidad: <%= product.cuantity %>
                                </p>
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <p>Para: <%= product.animal %>
                                </p>
                            </li>
                            <li>
                                <p>Categoría: <%= product.category %>
                                </p>
                            </li>
                            <li>
                                <p>Sub-categoría: <%= product.subCategory %>
                                </p>
                            </li>
                        </ul>
                        <form action="/admin/products/<%= product.id %>?_method=DELETE " method="POST">
                            <div class="botones">
                                <a href="/admin/products/<%= product.id %> /edit" class="btn btn-success">Editar</a>
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </div>
                        </form>
                    </article>
                </div>

            </div>

            <%- include('./partials/footer') %>
    </body>

</html>