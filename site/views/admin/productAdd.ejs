<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

      <main class="container contenido nuevo-producto">
        <!-- Titulo -->
        <h1 class="col-12">NUEVO PRODUCTO</h1>

        <form class="col-12 row" action="">
          <!-- Carrusel -->
          <div class="carrusel-add-image col-12 col-lg-6">
            <div id="carousel-controller" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="/images/productos/casaperro1.jpg" class="imagen-carrusel" alt="...">
                  <button class="btn btn-danger" type="button">X</button>
                </div>
                <div class="carousel-item">
                  <img src="/images/productos/casaperro2.jpg" class="imagen-carrusel" alt="...">
                  <button class="btn btn-danger" type="button">X</button>
                </div>
                <div class="carousel-item">
                  <img src="/images/productos/casaperro3.jpg" class="imagen-carrusel" alt="...">
                  <button class="btn btn-danger" type="button">X</button>
                </div>
              </div>
              <a class="carousel-control-prev" href="#carousel-controller" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel-controller" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <!-- Boton agregar imagen -->
            <div class="boton-image col-12">
              <label class="btn btn-success" for="archivo">Agregar foto</label>
              <span class="obligatorio">*</span>
              <input type="file" name="img" id="archivo" multiple>

            </div>
          </div>

          <!-- CAMPOS -->

          <div class="col-12 col-lg-6">
            <!-- Animales -->
            <div class="campo-animal margen">
              <select class="seleccionar col-7" name="animal" id="animal">
                <option value="perro">Perro</option>
                <option value="gato">Gato</option>
                <option value="ave">Ave</option>
                <option value="pez">Pez</option>
                <option value="roedor">Roedor</option>
                <option value="reptil">Reptil</option>
              </select>
              <span class="obligatorio">*</span>

              <!-- Modal Agregar animal -->
              <button type="button" class="btn btn-light col-4" data-toggle="modal" data-target="#exampleModal"
                data-whatever="@getbootstrap">+</button>

              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Crear categoria animal</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form>
                        <div class="form-group">
                          <label for="recipient-name" class="col-form-label">Nombre</label>
                          <input type="text" class="form-control" id="recipient-name">
                          <span class="obligatorio">*</span>
                        </div>
                        <div class="form-group">
                          <label for="archivo" class="col-form-label">Subir imagen</label>
                          <input type="file" name="img-categoria" id="archivo">
                          <span class="obligatorio">*</span>
                        </div>
                      </form>
                      <span class="mensaje-obligatorio">* Campos obligatorios</span>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                      <button type="button" class="btn btn-primary">Crear</button>
                    </div>
                  </div>
                </div>
              </div>

            </div>

            <!-- Agregar categoria -->
            <div class="campo-categoria margen">
              <select class="seleccionar col-7" name="animal" id="animal">
                <option value="alimento">Alimento</option>
                <option value="salud">Salud</option>
                <option value="juguete">Juguete</option>
                <option value="accesorio">Accesorio</option>
                <option value="estetica-higiene">Estetica e higiene</option>
                <option value="farmacia">Farmacia</option>
              </select>
              <span class="obligatorio">*</span>

              <!-- Modal Agregar categoria animal -->
              <button type="button" class="btn btn-light col-4" data-toggle="modal" data-target="#exampleModal"
                data-whatever="@getbootstrap">+</button>

              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Crear categoria</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form>
                        <div class="form-group">
                          <label for="recipient-name" class="col-form-label">Nombre</label>
                          <input type="text" class="form-control" id="recipient-name">
                          <span class="obligatorio">*</span>
                        </div>
                      </form>
                      <span class="mensaje-obligatorio">* Campos obligatorios</span>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                      <button type="button" class="btn btn-primary">Crear</button>
                    </div>
                  </div>
                </div>
              </div>

            </div>

            <!-- Subcategoria -->
            <div class="sub-categoria margen">
              <input class="completar col-11" type="text" name="sub-categoria" id="sub-categoria"
                placeholder="Sub-categoria ej: preta, alimento seco, etc.">
              <span class="obligatorio">*</span>
            </div>

            <!-- Nombre -->
            <div class="nombre margen">
              <input class="completar col-11" type="text" name="nombre" id="nombre" placeholder="Nombre">
              <span class="obligatorio">*</span>
            </div>

            <!-- Descripcion -->
            <div class="descripcion margen">
              <textarea class="completar col-12" name="descripcion" id="descripcion" cols="30" rows="3"
                placeholder="DescripciÃ³n"></textarea>
            </div>

            <!-- Cantidad y precio -->
            <div class="cantidad-precio margen">
              <!-- cantidad -->
                <input class="completar col-5" type="number" min="1" step="1" placeholder="Cantidad" />
                <span class="obligatorio">*</span>
              <!-- Precio -->
                <input class="input-precio completar col-5" type="number" min="1" step="1" placeholder="$ Precio" />
                <span class="obligatorio">*</span>
            </div>

            <!-- etiqueta y descuento -->
            <div class="etiqueta-descuento margen">
                <select class="seleccionar col-6" name="etiqueta" id="etiqueta">
                  <option value="etiqueta-no">Sin etiqueta</option>
                  <option value="etiqueta-nuevo">Nuevo</option>
                  <option value="etiqueta-descuento">Descuento</option>
                </select>  
              <!-- descuento -->
                <input class="completar col-5" type="number" min="0" max="100" step="1" placeholder="% descuento" />
            </div>

            <!-- vencimiento(etiqueta-descuento) y precio final -->
            <div class="vencimiento-precio-final margen">
              <!-- vencimiento -->
              
                <input class="vencimiento seleccionar col-6" type="date" name="vencimiento" id="vencimiento" placeholder="Vencimiento">
              
              <!-- Precio final -->
              
                <input class="completar col-5" type="text" name="precio-final" id="precio-final" placeholder="$ Precio final">
              
            </div>
            <span class="margen">* Campos obligatorios</span>
          </div>
          <!-- Botones -->
          <div class="botones col-12 row">
            <button class="btn btn-danger resetear col-5" type="reset">Resetear</button>
            <button class="btn btn-success crear col-5" type="submit">Crear</button>
          </div>
        </form>
      </main>


      <%- include('./partials/footer') %>
  </body>

</html>