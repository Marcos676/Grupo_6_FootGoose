<!DOCTYPE html>
<html lang="es">
  
  <%- include('./partials/head') %> 
  <body>
    <%- include('./partials/header') %> 

    <!--DETALLE DE PRODUCTOS-->
   
		<div class="container contenido products-wrapper">
      <div class="row">
        <!-- titulo -->
      </div>
      <div class="product-detail">
        <div class="row">
          <div class="col-12 col-lg-8">

            <!-- CARROUSEL -->
            <div id="carousel-controller" class="carousel slide col-12" data-ride="carousel">
              <div class="carousel-inner">
                  <div class="carousel-item active">
                      <img src="/images/productos/<%= product.images[0].imgName %>" class="imagen-carrusel product-detail-img" alt="...">
                  </div>
                  <% for( let index = 1; index < product.images.length; index++ ) { %>
                      <div class="carousel-item">
                          <img src="/images/productos/<%= product.images[index].imgName %> " class="imagen-carrusel product-detail-img" alt="...">
                      </div>
                  <% } %>
              </div>
              <a class="carousel-control-prev" href="#carousel-controller" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel-controller" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
              </a>
          </div>
            
          </div>
          <div class="col-12 col-lg-4">
            <!-- Datos del producto -->
            <article class="product-detail-info">
              <!-- Nombre -->
              <h2 class="product-detail-title"><%= product.name %></h2>
              <!-- Precio final -->
                  <p class="product-detail-price">$<%= product.finalPrice %></p>
              <ul class="actions-list">
                <li>
                  <i class="fas fa-credit-card"></i>
                  <p>Pagá en cuotas</p>
                </li>
              </ul>
              <!-- añadir al carrito -->
                <a href="#" class="add-cart-button">AÑADIR AL CARRITO</a><a href="#" class="buy-now-button">COMPRAR AHORA</a>
              <hr>
              <!-- descripción -->
              <p class="product-detail-description">
                <%= product.description %> 
              </p>
            </article>
          </div>
        </div>
      </div>
    </div>
    <br><br>

    <!--FIN DE DETALLE DE PRODUCTOS-->

  <%- include('./partials/footer') %> 
  </body>
</html>