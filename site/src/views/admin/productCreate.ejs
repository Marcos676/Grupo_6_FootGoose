<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

      <div class="container contenido nuevo-producto">
        <!-- Titulo -->
        <h1 class="col-12">NUEVO PRODUCTO</h1>

        <form class="col-12 row" action="/admin/products/create" method="POST" enctype="multipart/form-data">
          <!-- Carrusel -->
          <div class="carrusel-add-image col-12 col-lg-5">
            <div id="carousel-controller" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="/images/productos/undefinedProduct.png" class="imagen-carrusel" alt="...">
                </div>
                <!--   <div class="carousel-item">
                  <img src="/images/productos/casaperro2.jpg" class="imagen-carrusel" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/images/productos/casaperro3.jpg" class="imagen-carrusel" alt="...">
                </div>
              </div> -->
                <a class="carousel-control-prev" href="#carousel-controller" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-controller" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
            <!-- Boton agregar imagen -->
            <div class="boton-image col-12">
              <label class="btn btn-success" for="archivo">Agregar foto</label>
              <input type="file" name="img" id="archivo" multiple>
            </div>
          </div>

          <!-- CAMPOS -->

          <div class="col-12 col-lg-6">
            <!-- Animales y Categorías -->
            <div class="campo-animal margen">
              <select class="seleccionar col-5" name="animal">
                <% classifications[0].forEach(mascota=> { %>
                  <option value=<%=mascota.id %> ><%= mascota.animal %>
                  </option>
                  <% }) %>
              </select>
              <span class="obligatorio col-1">*</span>

              <select class="seleccionar col-5" name="category">
                <% classifications[1].forEach(categoria=> { %>
                  <option value=<%=categoria.id %> ><%= categoria.category %>
                  </option>
                  <% }) %>
              </select>
              <span class="obligatorio col-1">*</span>

            </div>

            <!-- Subcategoria -->
            <select class="sub-categoria margen" name="subCategory">
              <% classifications[2].forEach(subCategoria=> { %>
                <option value=<%=subCategoria.id %> ><%= subCategoria.sub_category %>
                </option>
                <% }) %>
            </select>
            <span class="obligatorio col-1">*</span>

            <!-- Nombre -->
            <div class="nombre margen">
              <input class="completar col-11" type="text" name="name" placeholder="Nombre">
              <span class="obligatorio col-1">*</span>
            </div>

            <!-- Descripcion -->
            <div class="descripcion margen">
              <textarea class="completar col-11" name="description" cols="30" rows="3"
                placeholder="Descripción"></textarea>
            </div>

            <!-- Cantidad y precio -->
            <div class="cantidad-precio margen">
              <!-- cantidad -->
              <input class="completar col-5" type="number" name="cuantity" min="1" step="1" placeholder="Cantidad" />
              <span class="obligatorio col-1">*</span>
              <!-- Precio -->
              <input class="input-precio completar col-5" type="number" name="price" min="1" step="1"
                placeholder="$ Precio" />
              <span class="obligatorio col-1">*</span>
            </div>

            <!-- etiqueta y descuento -->
            <div class="etiqueta-descuento margen">
              <select class="seleccionar col-5" name="label" id="etiqueta">
                <% classifications[3].forEach(etiqueta=> { %>
                  <option value="<%= etiqueta.id %>">
                    <%= etiqueta.label %>
                  </option>
                  <% }) %>
              </select>
              <!-- Espacio -->
              <div class="col-1"></div>

              <!-- descuento -->
              <input class="completar col-5" type="number" name="discount" min="0" max="100" step="1"
                placeholder="% descuento" />
            </div>

            <!-- vencimiento(etiqueta-descuento y su aplicación) y precio final -->
            <div class="vencimiento-precio-final margen">
              <!-- vencimiento -->

              <input class="vencimiento seleccionar col-5" type="date" name="expiration" placeholder="Vencimiento">
              <!-- Espacio -->
              <div class="col-1"></div>

              <!-- Precio final -->
              <input class="completar col-5" type="text" name="finalPrice" placeholder="$ Precio final">
            </div>
            <span class="margen">* Campos obligatorios</span>
          </div>
          <!-- Botones -->
          <div class="botones col-12 row">
            <button class="btn btn-danger resetear col-5" type="reset">Resetear</button>
            <button class="btn btn-success crear col-5" type="submit">Crear</button>
          </div>
        </form>
      </div>


      <%- include('../partials/footer') %>
  </body>

</html>