<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

    <body>
        <%- include('../partials/headerAdmin.ejs') %>

            <div class="container contenido row admin-product-detail">
                <!-- Carrusel -->
                <div class="carrusel-add-image col-12 col-lg-6">
                    <!-- Titulo -->
                    <h3 class="col-12 centrar">
                        <%= product.name %>
                    </h3>
                    <div id="carousel-controller" class="carousel slide col-12" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/productos/<%= product.images[0].imgName %>" class="imagen-carrusel" alt="...">
                            </div>
                            <% for( let index = 1; index < product.images.length; index++ ) { %>
                                <div class="carousel-item">
                                    <img src="/images/productos/<%= product.images[index].imgName %> " class="imagen-carrusel" alt="...">
                                </div>
                                <% } %>
                            </div>
                            <a class="carousel-control-prev" href="#carousel-controller" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-controller" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- descripcion -->
                        <p class="centrar col-12">Descripción: <%= product.description %>
                        </p>
                    </div>
                
                    <!-- Datos -->
                    <div class="padding-r-no col-12 col-lg-6 centrar">
                        
                        <ul class="borde-inferior">
                            <li>
                                <p>Para: <%= product.subCategory.category.animal.animal %>
                                </p>
                            </li>
                            <li>
                                <p>Categoría: <%= product.subCategory.category.category %>
                                </p>
                            </li>
                            <li>
                                <p>Sub-categoría: <%= product.subCategory.subCategory %>
                                </p>
                            </li>
                        </ul>
                        <ul class="borde-inferior">
                            <li>
                                <p>Precio original: $<%= product.price %>
                                </p>
                            </li>
                            <li>
                                <p>Descuento: <%= product.discount %>%</p>
                            </li>
                            <li>
                                <p>Precio final: $<%= product.finalPrice %>
                                </p>
                            </li>
                            <li>
                                <p>Etiqueta: <%= product.label.label %>
                                </p>
                            </li>
                            <!-- <li>
                                <p>Vencimiento de etiqueta: <%= product.expiration %>
                                </p>
                            </li> -->
                        </ul>
                        <ul>
                            <li>
                                <p>Cantidad: <%= product.cuantity %>
                                </p>
                            </li>
                        </ul>
                
                    </div>
                    <div class="col-12">
                        <form action="/admin/products/<%= product.id %>?_method=DELETE " method="POST">
                            <div class="botones">
                                <a href="/admin/products/<%= product.id %> /edit" class="btn btn-success">Editar</a>
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <%- include('../partials/footer') %>
            <script>
                var check = document.getElementById("cambiarModo");
            
                check.onclick = () => {
                    document.querySelector("body").classList.toggle('active');
                }
            </script>
    </body>

</html>